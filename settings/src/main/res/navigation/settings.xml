<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_navigation"
    app:startDestination="@id/settings_fragment">

    <framework-fragment
        android:id="@+id/settings_fragment"
        android:name="com.sorrowblue.comicviewer.settings.SettingsFragment"
        android:label="設定">
        <action
            android:id="@+id/action_settings_to_display_settings"
            app:destination="@id/settings_display" />
        <action
            android:id="@+id/action_settings_to_settings_viewer"
            app:destination="@id/settings_viewer" />
        <action
            android:id="@+id/action_settings_to_settings_folder"
            app:destination="@id/settings_folder_navigation" />
        <action
            android:id="@+id/action_settings_to_settings_security"
            app:destination="@id/settings_security_navigation" />
    </framework-fragment>
    <include app:graph="@navigation/settings_display" />
    <include app:graph="@navigation/settings_viewer" />
    <include app:graph="@navigation/settings_folder" />
    <include app:graph="@navigation/settings_security" />
</navigation>
