{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreDeps": [
    "dagger.hilt.android.plugin"
  ],
  "prHourlyLimit": 0,
  "schedule": [
    "before 3am"
  ],
  "labels": [
    ":dependabot: dependencies",
    "renovate"
  ],
  "dependencyDashboardLabels": [
    "renovate"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "com.android."
      ],
      "excludePackagePrefixes": [
        "com.android.billingclient"
      ],
      "groupName": "Android Gradle Plugin",
      "groupSlug": "android_gradle_plugin"
    },
    {
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin:",
        "org.jetbrains.kotlin.",
        "com.google.devtools.ksp"
      ],
      "groupName": "Kotlin",
      "groupSlug": "kotlin"
    },
    {
      "matchPackagePrefixes": [
        "com.dropbox.core:dropbox-android-sdk",
        "com.fasterxml.jackson.core:jackson-core"
      ],
      "groupName": "dropbox",
      "groupSlug": "dropbox"
    },
    {
      "matchPackagePrefixes": [
        "com.microsoft.graph:microsoft-graph",
        "com.microsoft.identity.client",
        "io.opentelemetry:opentelemetry-api",
        "com.fasterxml.jackson.core:jackson-core"
      ],
      "groupName": "Microsoft Sdk",
      "groupSlug": "microsoft_sdk"
    },
    {
      "matchPackagePrefixes": [
        "com.google.api-client:google-api-client-android",
        "com.google.apis:google-api-services-drive",
        "com.google.guava:guava"
      ],
      "groupName": "Google api",
      "groupSlug": "google_api"
    },
    {
      "matchPackagePrefixes": [
        "io.coil-kt:coil",
        "io.coil-kt:coil-base"
      ],
      "groupName": "Coil",
      "groupSlug": "coil"
    },
    {
      "matchPackagePrefixes": [
        "androidx.hilt:"
      ],
      "groupName": "Hilt",
      "groupSlug": "androidx_hilt"
    },
    {
      "matchPackagePrefixes": [
        "io.github.takahirom.roborazzi"
      ],
      "groupName": "Roborazzi",
      "groupSlug": "takahirom_roborazzi"
    },
    {
      "matchPackagePrefixes": [
        "androidx.compose"
      ],
      "groupName": "androidx.compose",
      "groupSlug": "androidx_compose"
    }
  ]
}
